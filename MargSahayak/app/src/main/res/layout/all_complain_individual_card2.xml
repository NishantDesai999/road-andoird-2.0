<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:elevation="16dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:scaleType="center"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintStart_toEndOf="@+id/itemImage"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/tvTitle4" />-->

        <TextView
            android:id="@+id/tvTitle4"
            style="@style/mWhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:capitalize="words"
            android:text="Status :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/status"
            style="@style/mWhiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="In Progress"
            android:textAppearance="@style/mText"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle4"
            app:layout_constraintStart_toEndOf="@+id/tvTitle4" />

        <TextView
            android:id="@+id/textView8"
            style="@style/mWhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Reported On :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/date" />

        <TextView
            android:id="@+id/date"
            style="@style/mWhiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="8dp"
            android:capitalize="words"
            android:text="20:10:2018"
            android:textAppearance="@style/mText"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView10"
            style="@style/mWhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:text="Estimated Time :"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/timeOfCompletion1"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/timeOfCompletion1"
            style="@style/mWhiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:capitalize="words"
            android:text="30:10:2018"
            android:textAppearance="@style/mText"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            tools:ignore="RtlCompat" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>