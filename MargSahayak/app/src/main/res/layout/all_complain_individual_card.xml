<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:elevation="16dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_image_black_24dp"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Grievance Type:"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_status_title"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintStart_toEndOf="@+id/itemImage"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/tvTitle4" />-->

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:capitalize="words"
            android:text="Status :"
            app:layout_constraintBottom_toTopOf="@+id/tv_reported_on"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />


        <TextView
            android:id="@+id/tv_status_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="In Progress"
            android:textAppearance="@style/mText"
            app:layout_constraintBottom_toBottomOf="@+id/tv_status_title"
            app:layout_constraintStart_toEndOf="@+id/tv_status_title" />

        <TextView
            android:id="@+id/tv_reported_on"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Reported On :"
            app:layout_constraintBottom_toTopOf="@+id/tv_estimated_time"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/tv_status_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_reported_on_data"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:capitalize="words"
            android:text="13/3/2018"
            android:textAppearance="@style/mText"
            app:layout_constraintBottom_toBottomOf="@+id/tv_reported_on"
            app:layout_constraintStart_toEndOf="@+id/tv_reported_on"
            app:layout_constraintTop_toTopOf="@+id/tv_reported_on" />

        <TextView
            android:id="@+id/tv_estimated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Estimated Time :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/tv_reported_on"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/tv_estimated_time_data"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:capitalize="words"
            android:text="7 days "
            android:textAppearance="@style/mText"
            app:layout_constraintBottom_toBottomOf="@+id/tv_estimated_time"
            app:layout_constraintStart_toEndOf="@+id/tv_estimated_time"
            app:layout_constraintTop_toTopOf="@+id/tv_estimated_time"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="RtlCompat" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>